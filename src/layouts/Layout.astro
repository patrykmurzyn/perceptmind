---
import '../styles/global.css';
import logoDark from '../assets/logo_dark.svg';
import logoWhite from '../assets/logo_white.svg';

interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
}

const {
  title = 'PerceptMind',
  description = 'PerceptMind delivers practical AI solutions for modern businesses.',
  canonicalUrl = 'https://perceptmind.com/',
  ogImage = '/favicon.svg'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={logoDark.src} />
    <link rel="icon" type="image/svg+xml" href={logoDark.src} media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href={logoWhite.src} media="(prefers-color-scheme: dark)" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preload" href="/fonts/Satoshi-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Satoshi-Medium.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Satoshi-Black.woff2" as="font" type="font/woff2" crossorigin />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
