---
import { Image } from 'astro:assets';
import logoWhite from '../assets/logo_white.svg';
---

<nav class="navbar">
  <div class="logo-container">
    <a href="#hero" aria-label="Home" id="logo-link">
      <Image src={logoWhite} alt="PerceptMind Logo" class="logo" loading="eager" />
    </a>
  </div>
  <div class="nav-links">
    <div class="nav-dropdown">
      <button
        type="button"
        class="nav-link nav-trigger"
        id="offer-trigger"
        aria-haspopup="true"
        aria-expanded="false"
        aria-controls="offer-menu"
      >
        Offer
        <span class="trigger-caret" aria-hidden="true">â–¾</span>
      </button>
      <div class="dropdown-menu" id="offer-menu" aria-label="Offer links">
        <a href="#offer-ai-automation" class="dropdown-link offer-link" data-offer-index="0">
          AI Automation
        </a>
        <a href="#offer-web-development" class="dropdown-link offer-link" data-offer-index="1">
          Web Development
        </a>
        <a href="#offer-ai-trust-security-solutions" class="dropdown-link offer-link" data-offer-index="2">
          AI Trust &amp; Security Solutions
        </a>
        <a href="#offer-ai-strategy-consulting" class="dropdown-link offer-link" data-offer-index="3">
          AI Strategy &amp; Consulting
        </a>
      </div>
    </div>
    <a href="#contact" class="nav-link" id="contact-link">Contact</a>
  </div>
</nav>

<script>
  const dropdown = document.querySelector('.nav-dropdown') as HTMLDivElement | null;
  const trigger = document.getElementById('offer-trigger') as HTMLButtonElement | null;
  const menu = document.getElementById('offer-menu') as HTMLDivElement | null;
  const logoLink = document.getElementById('logo-link') as HTMLAnchorElement | null;
  const heroSection = document.getElementById('hero') as HTMLElement | null;
  const contactLink = document.getElementById('contact-link') as HTMLAnchorElement | null;
  const contactSection = document.getElementById('contact') as HTMLElement | null;
  const offerLinks = Array.from(document.querySelectorAll('.offer-link')) as HTMLAnchorElement[];
  const navbar = document.querySelector('.navbar') as HTMLElement | null;
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  function scrollToSection(section: HTMLElement) {
    const offset = navbar?.offsetHeight ?? 0;
    const targetY = Math.max(0, section.getBoundingClientRect().top + window.scrollY - offset - 8);
    window.scrollTo({
      top: targetY,
      behavior: prefersReducedMotion ? 'auto' : 'smooth'
    });
  }

  const setOpen = (open: boolean) => {
    if (!dropdown || !trigger || !menu) return;
    dropdown.classList.toggle('is-open', open);
    trigger.setAttribute('aria-expanded', String(open));
  };

  trigger?.addEventListener('click', () => {
    const shouldOpen = !dropdown?.classList.contains('is-open');
    setOpen(Boolean(shouldOpen));
  });

  document.addEventListener('click', (event) => {
    if (!dropdown) return;
    if (!(event.target instanceof Node)) return;
    if (!dropdown.contains(event.target)) setOpen(false);
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') setOpen(false);
  });

  logoLink?.addEventListener('click', (event) => {
    if (!heroSection) return;
    event.preventDefault();
    setOpen(false);
    scrollToSection(heroSection);
  });

  contactLink?.addEventListener('click', (event) => {
    if (!contactSection) return;
    event.preventDefault();
    setOpen(false);
    scrollToSection(contactSection);
  });

  offerLinks.forEach((link) => {
    link.addEventListener('click', (event) => {
      const index = Number(link.dataset.offerIndex);
      if (!Number.isFinite(index)) return;
      event.preventDefault();
      window.dispatchEvent(new CustomEvent('offer:go', { detail: { index } }));
      window.history.replaceState(null, '', link.getAttribute('href') ?? '#offer');
      setOpen(false);
      trigger?.focus();
    });
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-s) var(--space-l);
    z-index: 1000;
    background: rgba(8, 12, 20, 0.5);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .logo {
    height: var(--space-l);
    width: auto;
    display: block;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-3xs);
    flex-wrap: nowrap;
  }

  .nav-link {
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text-high);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    transition: color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease;
    padding: 0.5rem 0.9rem;
    border-radius: 9999px;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .nav-dropdown {
    position: relative;
    display: inline-flex;
    align-items: center;
  }

  .nav-trigger {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    background: rgba(255, 255, 255, 0.03);
    cursor: pointer;
    font-family: inherit;
    line-height: 1;
  }

  .trigger-caret {
    font-size: 0.8em;
    transform: translateY(-1px);
    transition: transform 0.2s ease;
  }

  .nav-dropdown.is-open .trigger-caret {
    transform: translateY(-1px) rotate(180deg);
  }

  .nav-link:hover {
    color: var(--color-accent);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.08);
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + 0.45rem);
    right: 0;
    min-width: 20.5rem;
    display: grid;
    gap: 0.2rem;
    padding: 0.45rem;
    background: linear-gradient(180deg, rgba(16, 25, 40, 0.96), rgba(8, 12, 20, 0.95));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.9rem;
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    box-shadow: 0 14px 30px rgba(0, 0, 0, 0.34);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-6px) scale(0.98);
    transition: opacity 0.18s ease, transform 0.18s ease, visibility 0.18s ease;
    pointer-events: none;
  }

  .nav-dropdown.is-open .dropdown-menu,
  .nav-dropdown:focus-within .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  .dropdown-link {
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-sm);
    font-weight: 600;
    letter-spacing: 0.01em;
    color: var(--color-text-high);
    text-decoration: none;
    padding: 0.62rem 0.72rem;
    border-radius: 0.6rem;
    transition: color 0.2s ease, background-color 0.2s ease, transform 0.2s ease;
  }

  .dropdown-link:hover,
  .dropdown-link:focus-visible {
    color: #ffffff;
    background: rgba(245, 158, 11, 0.16);
    transform: translateX(2px);
    outline: none;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .navbar {
      padding: var(--space-s) var(--space-m);
    }

    .nav-links {
      gap: 0.25rem;
    }

    .nav-link {
      padding: 0.46rem 0.72rem;
      font-size: var(--font-size-sm);
    }

    .dropdown-menu {
      right: auto;
      left: 0;
      min-width: min(20.5rem, calc(100vw - 2rem));
    }
  }
</style>
