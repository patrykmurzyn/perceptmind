<section id="contact" class="contact-section">
  <!-- Decorative background element -->
  <div class="glow-bg"></div>
  
  <div class="content-wrapper">
    <div class="header-group">
      <h2 class="contact-title">
        Turn your idea<br />
        <span class="text-accent">into an AI product</span>
      </h2>
      <p class="contact-subtext">Have a project in mind? Email us directly to start the conversation. Please describe your problem in detail and the expected results.</p>
    </div>

    <!-- Container for the main action and the copy button -->
    <div class="action-dock">
      <a href="mailto:contact@perceptmind.com" class="email-button">
        <span class="email-text">contact@perceptmind.com</span>
        <svg class="icon-send" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 17L17 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M7 7H17V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <div class="separator"></div>

      <button id="copy-btn" class="copy-button" aria-label="Copy email address" title="Copy to clipboard">
        <svg class="icon-copy" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" xmlns="http://www.w3.org/2000/svg">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div id="success-msg" class="success-message">Talk to you soon!</div>
    </div>
  </div>
</section>

<script>
  const copyBtn = document.getElementById('copy-btn');
  const emailBtn = document.querySelector('.email-button');
  const successMsg = document.getElementById('success-msg');
  const email = 'contact@perceptmind.com';

  function showSuccess() {
    if (successMsg) {
      successMsg.classList.add('visible');
      setTimeout(() => {
        successMsg.classList.remove('visible');
      }, 3000);
    }
  }

  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(email);
        copyBtn.classList.add('copied');
        showSuccess();
        setTimeout(() => {
          copyBtn.classList.remove('copied');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy text: ', err);
      }
    });
  }

  if (emailBtn) {
    emailBtn.addEventListener('click', () => {
      showSuccess();
    });
  }
</script>

<style>
  .contact-section {
    position: relative;
    width: 100%;
    min-height: 50vh; 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* Use variables from colors.css */
    background-color: var(--elevation-0);
    color: var(--color-text-high);
    padding: var(--space-2xl) var(--space-m);
    overflow: hidden;
  }

  /* Subtle background glow mesh */
  .glow-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(30, 144, 255, 0.08) 0%, rgba(8, 12, 20, 0) 60%);
    pointer-events: none;
    z-index: 0;
  }

  .content-wrapper {
    position: relative;
    z-index: 1;
    max-width: 800px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .header-group {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .text-accent {
    color: var(--color-accent);
  }

  .contact-title {
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-5xl); /* Large, impactful title */
    font-weight: 900;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-text-high);
  }

  .contact-text {
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-lg);
    color: var(--color-text-medium);
    margin: 0;
    font-weight: 400;
  }

  .contact-subtext {
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text-disabled);
    margin: 0;
    font-weight: 400;
    max-width: 48ch; /* Optimized for reading line length */
    line-height: 1.5;
  }

  /* The "Dock" container for the email button and copy button */
  .action-dock {
    position: relative; /* For positioning the success message */
    display: inline-flex;
    align-items: center;
    background-color: var(--elevation-2); /* Glassy dark surface */
    border: 1px solid var(--elevation-3);
    border-radius: 9999px; /* Pill shape */
    padding: 0.5rem; /* Padding around inner elements */
  }

  /* No hover effects on the dock itself */
  .action-dock:hover {
    background-color: var(--elevation-2);
    border-color: var(--elevation-3);
  }

  /* The main Email Button */
  .email-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--color-accent); /* Vibrant Orange */
    color: #FFFFFF; /* White text on orange */
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-family: 'Satoshi', sans-serif;
    font-size: var(--font-size-base);
    font-weight: 700;
    transition: background-color 0.2s ease;
  }

  .email-button:hover {
    background-color: var(--color-accent-hover);
  }

  /* Vertical separator line */
  .separator {
    width: 1px;
    height: 1.5rem;
    background-color: var(--elevation-4);
    margin: 0 0.5rem;
  }

  /* The Copy Button */
  .copy-button {
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-medium);
    padding: 0;
    margin: 0;
    border-radius: 4px; /* Slight rounding, more standard */
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
    position: relative;
    width: 2.75rem;
    height: 2.75rem;
  }

  .copy-button:hover {
    color: var(--color-text-high);
  }

  .copy-button svg {
    position: absolute;
    top: 50%;
    left: 40%; /* Shifted further left */
    transform: translate(-50%, -50%);
    transition: all 0.2s ease;
  }

  /* Icon states */
  .icon-check {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
    color: var(--color-status-success);
  }
  
  .icon-copy {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  /* Copied state classes */
  .copy-button.copied .icon-copy {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }

  .copy-button.copied .icon-check {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  .success-message {
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%) rotate(0deg);
    margin-left: var(--space-m);
    font-family: 'Satoshi', sans-serif;
    font-weight: 700;
    font-size: var(--font-size-lg);
    color: var(--color-accent);
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    /* "Handwritten" style tweak */
    transform-origin: left center;
  }

  .success-message.visible {
    opacity: 1;
    transform: translateY(-50%) rotate(-6deg); /* Angled "pod kÄ…tem" */
  }

  /* Responsive Adjustments */
  @media (max-width: 640px) {
    .content-wrapper {
        gap: var(--space-m);
        padding-inline: var(--space-s);
    }

    .action-dock {
      flex-direction: column;
      background: transparent;
      border: none;
      padding: 0;
      gap: var(--space-s);
      width: 100%;
      max-width: 100%;
    }

    .separator {
      display: none;
    }

    .email-button {
      width: 100%;
      justify-content: center;
      padding: var(--space-m); /* Larger touch target */
      font-size: var(--font-size-lg);
    }

    /* Keep Copy button as a clear secondary action */
    .copy-button {
      width: 100%;
      height: 3.5rem; /* Match general button height */
      border-radius: 9999px;
      background-color: var(--elevation-2);
      border: 1px solid var(--elevation-3);
      color: var(--color-text-medium);
    }
    
    .copy-button:active {
        background-color: var(--elevation-3);
    }
  }
</style>
